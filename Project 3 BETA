	<!-- First javascript for functions, read throughly -->
	<!-- This SHOULD work, spent many hours reading textbook and googling, let's see what happens. I had to rework the script a few times and
	added in if else statements so the score would properly work -->
	<!-- Update Game v0.4---- Including switch-case, streamlined code from version 0.2 -->
	<script type = "text/javascript">
	//Variables
	var currentLoc = 0
	//Initializing look() function
	    function init() {
            look();

	//Command Box
		function btnEnterCommands_click() {
			var userText = document.getElementById("textinput").value;
            var response = "";
            if (userText === "N") {
                response = btnNorth()_click
            } else {
                if (userText === "S") {
                    response = btnSouth()_click
                } else {
                    if (userText === "E") {
                        response = btnEast()_click
                    } else {
                        if (userText === "W") {
                            response = btnWest()_click
                        } else {
                            alert("Valid commands are N,S,E,W");
                        }
                    }
                }
            }
        }
	//NORTH
		function btnNorth_click() {
			  if (currentLoc === 0) {
               currentLoc = 1;               
            } else {
              if (currentLoc === 1) {
                 currentLoc = 5;           
              }
			} else {
				if (currentLoc === 2)	{
					currentLoc = 0;
				}
			}
				look();
			}
	//SOUTH
		function btnSouth_click() {
			  if (currentLoc === 0) {
               currentLoc = 2;               
            } else {
              if (currentLoc === 5) {
                 currentLoc = 1;           
              }
			}
			  else {
				if (currentLoc === 1)	{
					currentLoc = 0;
				}
			}
				look();
			}
	//EAST
		function btnEast_click() {
		 if (currentLoc === 0) {
               currentLoc = 3;
            } else {
              if (currentLoc === 4) {
                 currentLoc = 0;
              }
            }
            look();
         }
	//WEST
		function btnWest_click() {
		 if (currentLoc === 0) {
               currentLoc = 4;
            } else {
              if (currentLoc === 3) {
                 currentLoc = 0;
              }
            }
            look();
         }
	//look() descriptions featuring switch-case
		function look()	{	
			var desc = "";
			switch(currentLoc)	{
				case 0: desc = "It is Friday night, and all of your friends want to go out, but where do you go? This game will let explore the best nightlife spots Marist has to offer! Your townhouse is in Upper New, right next to Hancock Center.";
					break;
				case 1: desc = "You all just walked outside, waiting for JOE (dank taxi driver) to arrive."
					break;
				case 2: desc = "You are now at Mahoney's, but you probably cannot get in because it is a senior bar."
					break;
				case 3: desc = "You walked a few blocks, and now you are at Union Tavern, a LEGNENDARY bar!"
					break;
				case 4: desc = "You now go to River Station, where I will be after class after this project is due :)."
					break;
				case 5: desc = "You finally hailed JOE again, and he takes you back to Upper New, concluding your night."
					break;
				default: "Invalid move, try again."
			}
			updateDisplay(message);
			}
			
	//Textarea for var message for each button, added this as a function so the script would look cleaner
		function updateDisplay(message) {
            var textarea = document.getElementById("textarea");
            textarea.value = message + "\n\n" + textarea.value;
			}
			
			
			
			
	//FREE SPACE- code to add 101717
			
			
			
			
</script>
		<!--Buttons are now being created, and they will call the functions via the onclick value, which also add 5 points to score -->
		<input type="button" value="North" onclick="btnNorth_click()"id="btnNorth"/><br/><br/>
		<input type="button" value="South" onclick="btnSouth_click()" id="btnSouth"/><br/><br/>
		<input type="button" value="East" onclick="btnEast_click()" id="btnEast"/><br/><br/>
		<input type="button" value="West" onclick="btnWest_click()" id="btnWest"/><br/><br/>
		<input type="text" name="textinput" id="textinput"/>
		<input type="button" value="Enter Commands" id="btnEnterCommands_click()"/><br/><br/>
	
